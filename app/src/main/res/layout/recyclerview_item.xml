<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_orange_light"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewJourneyDate"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewType"
        app:layout_constraintEnd_toStartOf="@+id/textViewZones"
        app:layout_constraintStart_toEndOf="@+id/textViewType" />

    <TextView
        android:id="@+id/textViewZones"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewJourneyDate" />


</androidx.constraintlayout.widget.ConstraintLayout>